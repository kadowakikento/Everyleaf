<div class="container text-center" style="width: 500px;">
<p id="notice"><%= notice %></p>

<p>
  <strong>タスク名:</strong>
  <%= @task.title %>
</p>

<p>
  <strong>タスク詳細:</strong>
  <%= @task.content %>
</p>

<p>
  <strong>終了期限:</strong>
  <%= @task.deadline %>
</p>

<p>
  <strong>状況:</strong>
  <%= @task.status %>
</p>

<p>
  <strong>ラベル:</strong>
  <% @task.labels.each do |label| %>
    <%= label.name %>
    <% end %>
</p>

<p>
  <strong>優先度:</strong>
  <%= @task.priority %>
</p>



<%= link_to '編集', edit_task_path(@task) %> |
<%= link_to '一覧へ戻る', tasks_path %>
