<p id="notice"><%= notice %></p>

<h1>管理画面</h1>

<table>

  <body>
    <tbody>
      <% @users.preload(:tasks).all.each do |user| %>
        <tr class="task_row" >
          <td><%= user.name %></td>
          <td><%= user.email %></td>
          <td><%= user.tasks.count %></td>
          <td><%= user.admin %></td>
          <td><%= link_to '詳細', admin_user_path(user.id), class: "btn btn-outline-primary" %></td>
          <td><%= link_to '編集', edit_admin_user_path(user.id), class: "btn btn-outline-success" %></td>
          <td><%= link_to '削除', admin_user_path(user.id), method: :delete, data: { confirm: '本当に削除しますか?' }, class: "btn btn-outline-danger" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</table>